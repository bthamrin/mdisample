<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		
		.label{ font-size: 2em; }
	</ui:style>

	<g:LayoutPanel width="165px" height="50px">
		<g:layer left="5px" width="120px" top="10px" height="40px">
			<g:Label ui:field="nameLabel" styleName="{style.label}" />
		</g:layer>
		<g:layer left="125px" width="30px" top="10px" height="30px">
			<g:Button ui:field="closeButton" width="30px" height="30px">X</g:Button>
		</g:layer>
		
	</g:LayoutPanel>
</ui:UiBinder> 