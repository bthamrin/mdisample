<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.background {
			background-color: #444;
		}
		
		.header {
			font-size: 6em;
			font-weight: bold;
			color: #ccc;
			margin-left: 20px !important;
		}
		
		.type {
			color: #777;
			margin-left: 24px !important;
			padding-top: 14px !important;
		}
</ui:style>

	<g:HTMLPanel styleName="{style.background}" height="100%">
		<g:Label styleName="{style.type}">This page is an instance of Detail</g:Label>
		<g:Label ui:field="title" styleName="{style.header}" />
	</g:HTMLPanel>
</ui:UiBinder> 