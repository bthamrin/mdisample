<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.background { background-color: orange; }
	</ui:style>

	<g:LayoutPanel ui:field="navigationPanel" styleName="{style.background}">
		<g:layer left="0" width="50px" top="0" height="50px">
			<g:Button ui:field="newButton" width="50px" height="50px">+</g:Button>
		</g:layer>
		<g:layer left="50px" right="0" top="0" height="50px">
			<g:TabBar ui:field="tabBar" height="50px"/>
		</g:layer>

	</g:LayoutPanel>
</ui:UiBinder> 